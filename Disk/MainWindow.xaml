<Window x:Class="Disk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Disk" xmlns:viewmodel="clr-namespace:Disk.ViewModel.Common" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        xmlns:viewmodels="clr-namespace:Disk.ViewModel"
        xmlns:views="clr-namespace:Disk.View"
        mc:Ignorable="d"
        Title="DiskApp" Height="600" Width="600">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodels:AuthenticationViewModel}">
                <views:AuthenticationView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:MapCreatorViewModel}">
                <views:MapCreatorView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:MenuViewModel}">
                <views:MenuView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>

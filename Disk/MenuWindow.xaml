<Window x:Class="Disk.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Disk"
        mc:Ignorable="d"
        Title="DISK" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="1">
            <Viewbox>
                <Button Content="Start" Click="OnStartClick" FontSize="20" Margin="10 15 10 15" Width="200" Height="50"/>
            </Viewbox>
        </Border>

        <Border Grid.Row="2" Grid.Column="1">
            <Viewbox>
                <Button Content="Settings" Click="OnSettingsClick" FontSize="20" Margin="10 15 10 15" Width="200" Height="50"/>
            </Viewbox>
        </Border>

        <Border Grid.Row="3" Grid.Column="1">
            <Viewbox>
                <Button Content="Calibration" Click="OnCalibrationClick" FontSize="20" Margin="10 15 10 15" Width="200" Height="50"/>
            </Viewbox>
        </Border>

        <Border Grid.Row="4" Grid.Column="1">
            <Viewbox>
                <Button Content="Quit" Click="OnQuitClick" FontSize="20" Margin="10 15 10 15" Width="200" Height="50"/>
            </Viewbox>
        </Border>
    </Grid>
</Window>
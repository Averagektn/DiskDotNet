<UserControl x:Class="Disk.View.MapNamePickerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Disk.View" xmlns:viewmodel="clr-namespace:Disk.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MapNamePickerViewModel}"
             xmlns:styles="clr-namespace:Disk.Style"
             xmlns:lang="clr-namespace:Disk.Properties.Langs.MapNamePicker"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="/Style/BtnStyles.xaml"/>
    </UserControl.Resources>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{x:Static lang:MapNamePickerLocalization.MapName}" 
               Margin="15"
               HorizontalAlignment="Left"/>
        <TextBox Padding="0,5"
              Width="255"
              BorderThickness="0,0,0,1"
              HorizontalAlignment="Left"
              Text="{Binding MapName}"/>

        <Button Content="{x:Static lang:MapNamePickerLocalization.Add}" Command="{Binding SaveMapCommand}"                    
                Foreground="White"
                    Background="Black"
                    Margin="0,25"
                    Height="35"
                    Width="250">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource GradientButtonStyle}"/>
            </Button.Style>
        </Button>

        <styles:Popup IsPopupOpen="{Binding IsShowPopup}" PopupHeader="{Binding PopupHeader}" PopupMessage="{Binding PopupMessage}"/>
    </StackPanel>
</UserControl>

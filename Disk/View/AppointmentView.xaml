<UserControl x:Class="Disk.View.AppointmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:lang="clr-namespace:Disk.Properties.Langs.Appointment" 
             xmlns:local="clr-namespace:Disk.View" 
             xmlns:viewmodel="clr-namespace:Disk.ViewModel" xmlns:styles="clr-namespace:Disk.Style"
             d:DataContext="{d:DesignInstance Type=viewmodel:AppointmentViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/DataGridCenterdCell.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <styles:Popup 
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            PopupMessage="{Binding PopupMessage}" 
            IsPopupOpen="{Binding IsShowPopup}" 
            PopupHeader="{Binding PopupHeader}"/>

        <TextBlock 
            Grid.Row="0" 
            Grid.ColumnSpan="2"
            Margin="5" 
            FontSize="25" 
            Text="{Binding Patient}"/>

        <DataGrid 
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            x:Name="AppointmentsDataGrid"
            FontSize="25"
            Grid.Row="1" 
            SelectionMode="Single"
            Grid.ColumnSpan="2"
            ScrollViewer.VerticalScrollBarVisibility="Auto" 
            ItemsSource="{Binding Sessions}" 
            IsReadOnly="True"
            AutoGenerateColumns="False"
            SelectedItem="{Binding SelectedSession}">
            <DataGrid.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding ShowSessionCommand}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Width="1*" 
                    Header="{x:Static lang:AppointmentLocalization.DateTime}"  
                    Binding="{Binding DateTime}"
                    ElementStyle="{StaticResource CentredCell}">
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="1*" x:Name="DeviationCol">
                    <DataGridTemplateColumn.Header>
                        <Grid Width="{Binding ElementName=DeviationCol, Path=ActualWidth}" >
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                TextAlignment="Center" 
                                Grid.Row="0" 
                                Grid.ColumnSpan="2" 
                                Text="{x:Static lang:AppointmentLocalization.Deviation}" />
                            <TextBlock 
                                Grid.Row="1"
                                Grid.Column="0"
                                TextAlignment="Center"
                                Text="X" />
                            <TextBlock 
                                Grid.Row="1"
                                Grid.Column="1"
                                TextAlignment="Center"
                                Text="Y" />
                        </Grid>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                    TextAlignment="Center"
                                    Text="{Binding SessionResult.DeviationX, StringFormat=N1}" 
                                    Grid.Column="0"/>
                                <TextBlock 
                                    TextAlignment="Center"
                                    Text="{Binding SessionResult.DeviationY, StringFormat=N1}" 
                                    Grid.Column="1"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="1*" x:Name="MathExpCol">
                    <DataGridTemplateColumn.Header>
                        <Grid Width="{Binding ElementName=MathExpCol, Path=ActualWidth}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                TextAlignment="Center"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Text="{x:Static lang:AppointmentLocalization.MathExp}"
                                HorizontalAlignment="Center"/>
                            <TextBlock 
                                TextAlignment="Center"
                                Grid.Row="1"
                                Text="X" 
                                Grid.Column="0"/>
                            <TextBlock 
                                TextAlignment="Center"
                                Text="Y" 
                                Grid.Row="1"
                                Grid.Column="1"/>
                        </Grid>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                    TextAlignment="Center"
                                    Text="{Binding SessionResult.MathExpX, StringFormat=N1}" 
                                    Grid.Column="0"/>
                                <TextBlock 
                                    TextAlignment="Center"
                                    Text="{Binding SessionResult.MathExpY, StringFormat=N1}" 
                                    Grid.Column="1"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn 
                    CanUserSort="False"
                    Width="1*" 
                    Header="{x:Static lang:AppointmentLocalization.Score}" 
                    Binding="{Binding SessionResult.Score}" 
                    ElementStyle="{StaticResource CentredCell}"/>
            </DataGrid.Columns>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SessionSelectedCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding ShowSessionCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <DataGrid.ContextMenu>
                <ContextMenu FontSize="20">
                    <MenuItem 
                        Header="{x:Static lang:AppointmentLocalization.Delete}" 
                        Command="{Binding DeleteSessionCommand}" 
                        CommandParameter="{Binding SelectedSession}" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <DataGrid 
            Grid.Row="2" 
            FontSize="25"
            SelectionMode="Single"
            IsReadOnly="True" 
            Grid.ColumnSpan="2"
            ItemsSource="{Binding Paths}" 
            AutoGenerateColumns="False" 
            ScrollViewer.VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn 
                    Width="1*" 
                    Header="{x:Static lang:AppointmentLocalization.TargetNum}" 
                    Binding="{Binding Ptt.TargetNumInc}" />
                <DataGridTextColumn 
                    Width="1*" 
                    Header="{x:Static lang:AppointmentLocalization.AverageSpeed}" 
                    Binding="{Binding Ptt.AverageSpeed, StringFormat=N1}" />
                <DataGridTextColumn 
                    Width="1*" 
                    Header="{x:Static lang:AppointmentLocalization.ApproachSpeed}" 
                    Binding="{Binding Ptt.ApproachSpeed, StringFormat=N1}" />
                <DataGridTextColumn 
                    Width="1*" 
                    Header="{x:Static lang:AppointmentLocalization.Time}" 
                    Binding="{Binding Ptt.Time, StringFormat=N1}" />
                <DataGridTextColumn 
                    Width="1*" 
                    Header="{x:Static lang:AppointmentLocalization.Precision}" 
                    Binding="{Binding Pit.Precision, StringFormat=N1}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button     
            VerticalAlignment="Center"
            Grid.Row="3"
            Grid.Column="0"
            Content="{x:Static lang:AppointmentLocalization.Start}" 
            Command="{Binding StartSessionCommand}"                    
            Margin="15"
            Padding="10"/>

        <Button 
            VerticalAlignment="Center"
            Grid.Row="3"
            Grid.Column="1"
            Content="{x:Static lang:AppointmentLocalization.ExportToExcel}"
            Command="{Binding ExportToExcelCommand}"
            Margin="15"
            Padding="10"/>
    </Grid>
</UserControl>

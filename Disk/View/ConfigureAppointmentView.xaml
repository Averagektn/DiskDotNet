<UserControl x:Class="Disk.View.ConfigureAppointmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Disk.View" 
             xmlns:viewmodel="clr-namespace:Disk.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ConfigureAppointmentViewModel}"
             xmlns:lang="clr-namespace:Disk.Properties.Langs.ConfigureAppointment" 
             xmlns:calibration="clr-namespace:Disk.Properties.Langs.Calibration"
             xmlns:settings="clr-namespace:Disk.Properties.Langs.Settings"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ScrollViewer 
            x:Name="MapsScroll"
            HorizontalScrollBarVisibility="Visible" 
            VerticalScrollBarVisibility="Disabled"
            Grid.Row="0">
            <Grid x:Name="MapsGrid">
                <DataGrid 
                    SelectionChanged="DataGrid_SelectionChanged"
                    FontSize="25"
                    SelectionMode="Single"
                    Grid.Column="0"
                    ItemsSource="{Binding Maps}" 
                    IsReadOnly="True"
                    AutoGenerateColumns="False"
                    SelectedItem="{Binding SelectedMap}"
                    Width="{Binding ElementName=MapsGrid, Path=ActualWidth}">
                    <DataGrid.Columns>
                        <DataGridTextColumn  
                            Width="*"
                            Header="{x:Static lang:ConfigureAppointmentLocalization.Map}" 
                            Binding="{Binding Name}" />
                    </DataGrid.Columns>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding MapSelectedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.ContextMenu>
                        <ContextMenu FontSize="20">
                            <MenuItem 
                                Header="{x:Static lang:ConfigureAppointmentLocalization.Delete}" 
                                Command="{Binding DeleteMapCommand}" 
                                CommandParameter="{Binding SelectedMap}" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Line 
                Visibility="{Binding MapVisibility}"
                X1="0" 
                X2="0" 
                Y1="0" 
                Y2="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}" 
                Stroke="Black" 
                StrokeThickness="2" 
                HorizontalAlignment="Center" />

            <Line 
                Visibility="{Binding MapVisibility}"
                X1="0" 
                Y1="0" 
                X2="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}" 
                Y2="0" 
                Stroke="Black" 
                StrokeThickness="2" 
                VerticalAlignment="Center" />

            <Border BorderBrush="Black" BorderThickness="2">
                <Canvas Visibility="{Binding MapVisibility}" x:Name="PaintArea">
                    <Path Stretch="Fill" Fill="Transparent" Stroke="Black" StrokeThickness="2">
                        <Path.Data>
                            <EllipseGeometry x:Name="FullRadiusEllipse"/>
                        </Path.Data>
                    </Path>
                </Canvas>
            </Border>


        </Grid>

        <Button
            Grid.Row="2" 
            Margin="200 10"
            Content="{x:Static lang:ConfigureAppointmentLocalization.Create}" 
            Command="{Binding CreateAppointmentCommand}"/>
    </Grid>
</UserControl>

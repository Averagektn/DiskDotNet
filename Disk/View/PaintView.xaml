<UserControl x:Class="Disk.View.PaintWindow.PaintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lang="clr-namespace:Disk.Properties.Langs.PaintWindow" 
             xmlns:local="clr-namespace:Disk.View.PaintWindow" 
             xmlns:viewmodel="clr-namespace:Disk.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:PaintViewModel}"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" xmlns:styles="clr-namespace:Disk.Style"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="800">

    <Grid x:Name="PaintAreaGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left">
            <MenuItem 
                Header="{x:Static lang:PaintWindowLocalization.Stop}" 
                IsEnabled="{Binding IsStopEnabled}" 
                Click="OnStopClick"/>
            <MenuItem 
                Header="{Binding ScoreString}"
                IsEnabled="False"/>
        </Menu>

        <Image 
            Grid.Row="1"
            Grid.RowSpan="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Panel.ZIndex="-10"
            Source="/Properties/feet_projection.png" />

        <TextBlock 
            Grid.Row="1" 
            Margin="10 10 0 0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Text="{x:Static lang:PaintWindowLocalization.LeftFoot}" 
            FontSize="55" />

        <TextBlock 
            Grid.Row="1" 
            Grid.Column="0" 
            Margin="0 10 10 0" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top"    
            Text="{x:Static lang:PaintWindowLocalization.RightFoot}" 
            FontSize="55" />

        <Canvas Name="PaintArea" Grid.Row="1" Grid.RowSpan="5">
            <Path Fill="Transparent" Stretch="Fill" Stroke="Black" 
                  StrokeThickness="2">
                <Path.Data>
                    <EllipseGeometry x:Name="AllowedArea"/>
                </Path.Data>
            </Path>
        </Canvas>

        <styles:Popup 
            Grid.Row="2"
            Grid.ColumnSpan="2"
            PopupMessage="{Binding PopupMessage}" 
            IsPopupOpen="{Binding IsShowPopup}" 
            PopupHeader="{Binding PopupHeader}"/>

        <Rectangle 
            Grid.Row="1" 
            Grid.Column="0" 
            Grid.RowSpan="5"
            Name="PaintRect"/>

        <Line 
            Grid.Row="1" 
            Grid.RowSpan="5" 
            X1="0" Y1="0" 
            X2="0" 
            Y2="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"   
            Stroke="Black" StrokeThickness="2" 
            HorizontalAlignment="Center" 
            Panel.ZIndex="-10" />

        <Line 
            Grid.Row="1" 
            Grid.RowSpan="5" 
            X1="0" 
            Y1="0" 
            X2="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}" 
            Y2="0" Stroke="Black" StrokeThickness="2" 
            VerticalAlignment="Center" Panel.ZIndex="-10" />
    </Grid>
</UserControl>

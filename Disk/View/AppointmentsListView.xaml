<UserControl x:Class="Disk.View.AppointmentsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:lang="clr-namespace:Disk.Properties.Langs.AppointementsList" 
             xmlns:local="clr-namespace:Disk.View" 
             xmlns:viewmodel="clr-namespace:Disk.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:AppointmentsListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel>
                <TextBlock Text="{x:Static lang:AppointmentsListLocalization.Surname}" Margin="10 10" FontSize="15"/>
                <TextBlock Text="{Binding Patient.Surname}" Margin="10 0" FontSize="15"/>
                <TextBlock Text="{x:Static lang:AppointmentsListLocalization.Name}" Margin="10 10" FontSize="15"/>
                <TextBlock Text="{Binding Patient.Name}" Margin="10 0" FontSize="15"/>
                <TextBlock Text="{x:Static lang:AppointmentsListLocalization.Patronymic}" Margin="10 10" FontSize="15"/>
                <TextBlock Text="{Binding Patient.Patronymic}" Margin="10 0" FontSize="15"/>
                <TextBlock Text="{x:Static lang:AppointmentsListLocalization.MobilePhone}" Margin="10 10" FontSize="15"/>
                <TextBlock Text="{Binding Patient.PhoneMobile}" Margin="10 0" FontSize="15"/>
                <TextBlock Text="{x:Static lang:AppointmentsListLocalization.HomePhone}" Margin="10 10" FontSize="15"/>
                <TextBlock Text="{Binding Patient.PhoneHome}" Margin="10 0 " FontSize="15"/>
                <TextBlock Text="{x:Static lang:AppointmentsListLocalization.DateOfBirth}" Margin="10 10" FontSize="15"/>
                <TextBlock Text="{Binding Patient.DateOfBirth}" Margin="10 0" FontSize="15"/>
            </StackPanel>
        </Viewbox>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left">
                <TextBlock FontSize="15" Text="{x:Static lang:AppointmentsListLocalization.AppoimentsHeader}" Margin="0 0 0 5"/>
            </Viewbox>

            <Viewbox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right">
                <Button
                    Margin="10"
                    Content="{x:Static lang:AppointmentsListLocalization.StartAppoiment}" 
                    Command="{Binding StartAppointmentCommand}"/>
            </Viewbox>

            <DataGrid 
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    x:Name="AppointmentsDataGrid" 
                    Margin="5 0"
                    ItemsSource="{Binding Appointments}" 
                    AutoGenerateColumns="False" 
                    SelectedItem="{Binding SelectedAppointment}" 
                    IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="1*" Header="{x:Static lang:AppointmentsListLocalization.DateTime}" Binding="{Binding DateTime}" />
                </DataGrid.Columns>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding ToAppointmentCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
